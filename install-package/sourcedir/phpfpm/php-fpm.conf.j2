{# php-fpm.conf.j2 #}

{% if ansible_distribution == 'Ubuntu' %}
include=/etc/php/8.1/fpm/pool.d/*.conf

[global]
pid = /run/php-fpm/php-fpm.pid

error_log = /var/log/php-fpm/error.log

daemonize = yes
{% elif ansible_distribution == 'CentOS' %}
include=/etc/php-fpm.d/*.conf

[global]
pid = /run/php-fpm/php-fpm.pid

error_log = /var/log/php-fpm/error.log

daemonize = yes
{% endif %}
